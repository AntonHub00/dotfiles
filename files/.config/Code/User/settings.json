{
    "editor.fontFamily": "'JetBrainsMono Nerd Font'",
    "editor.renderWhitespace": "none",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingOvertype": "always",
    "editor.autoClosingQuotes": "always",
    "editor.detectIndentation": false,
    "editor.dragAndDrop": false,
    "editor.emptySelectionClipboard": false,
    "editor.linkedEditing": true,
    "editor.renderLineHighlight": "none",
    "editor.rulers": [
        80
    ],
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontLigatures": true,
    "editor.formatOnPaste": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.minimap.enabled": false,
    "editor.quickSuggestions": true,
    "editor.suggestSelection": "recentlyUsedByPrefix",
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "files.defaultLanguage": "markdown",
    "files.enableTrash": false,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.hg/store/**": true,
        "**/venv/**": true,
    },
    "workbench.commandPalette.history": 100,
    "workbench.list.smoothScrolling": true,
    "workbench.panel.opensMaximized": "always",
    "material-icon-theme.showWelcomeMessage": false,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Overflow Contrast (rainglow)",
    "workbench.tips.enabled": false,
    "workbench.view.alwaysShowHeaderActions": true,
    "workbench.tree.renderIndentGuides": "always",
    "breadcrumbs.symbolPath": "off",
    "workbench.editor.closeOnFileDelete": true,
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "material-icon-theme",
    "zenMode.centerLayout": false,
    "zenMode.hideLineNumbers": false,
    "zenMode.hideStatusBar": false,
    "zenMode.hideTabs": false,
    "zenMode.restore": false,
    "window.customMenuBarAltFocus": false,
    "window.enableMenuBarMnemonics": false,
    "explorer.compactFolders": false,
    "search.exclude": {
        "**/venv": true
    },
    "search.searchEditor.doubleClickBehaviour": "openLocationToSide",
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "search.useIgnoreFiles": false,
    "debug.console.wordWrap": false,
    "debug.inlineValues": true,
    "extensions.closeExtensionDetailsOnViewChange": true,
    "extensions.ignoreRecommendations": true,
    "terminal.explorerKind": "external",
    "terminal.external.linuxExec": "kitty",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.showExitAlert": false,
    "problems.showCurrentInStatus": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "css.lint.duplicateProperties": "warning",
    "css.lint.important": "warning",
    "emmet.triggerExpansionOnTab": true,
    "git.untrackedChanges": "separate",
    "html.format.templating": true,
    "less.lint.duplicateProperties": "warning",
    "less.lint.important": "warning",
    "markdown.links.openLocation": "beside",
    "scss.lint.duplicateProperties": "warning",
    "scss.lint.important": "warning"
}