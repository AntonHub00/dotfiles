{
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": { "source.fixAll.eslint": true },
    "editor.tabSize": 2
  },
  "breadcrumbs.enabled": false,
  "breadcrumbs.symbolPath": "off",
  "css.lint.duplicateProperties": "warning",
  "css.lint.important": "warning",
  "debug.console.wordWrap": false,
  "debug.inlineValues": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingOvertype": "always",
  "editor.autoClosingQuotes": "always",
  "editor.dragAndDrop": false,
  "editor.emptySelectionClipboard": false,
  "editor.fontFamily": "'JetBrains Mono'",
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": true,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.rulers": [80],
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.tabCompletion": "on",
  "editor.wordBasedSuggestionsMode": "allDocuments",
  "emmet.triggerExpansionOnTab": true,
  "explorer.compactFolders": false,
  "extensions.closeExtensionDetailsOnViewChange": true,
  "extensions.ignoreRecommendations": true,
  "files.defaultLanguage": "markdown",
  "files.enableTrash": false,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/build/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/venv/**": true
  },
  "git.untrackedChanges": "separate",
  "html.format.templating": true,
  "less.lint.duplicateProperties": "warning",
  "less.lint.important": "warning",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveshare.authenticationProvider": "GitHub",
  "liveshare.presence": false,
  "markdown.links.openLocation": "beside",
  "material-icon-theme.showWelcomeMessage": false,
  "problems.showCurrentInStatus": true,
  "ruby.codeCompletion": "rcodetools",
  "ruby.intellisense": "rubyLocate",
  "ruby.useLanguageServer": true,
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.important": "warning",
  "search.exclude": {
    "**/build/**": true,
    "**/dist/**": true,
    "**/node_modules/**": true,
    "**/package-lock.json": true,
    "**/venv": true
  },
  "search.showLineNumbers": true,
  "search.smartCase": true,
  "search.useIgnoreFiles": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "kitty",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.rendererType": "canvas",
  "terminal.integrated.showExitAlert": false,
  "timeline.excludeSources": [],
  "vetur.ignoreProjectWarning": true,
  "vim.easymotion": true,
  "vim.highlightedyank.duration": 500,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.insertModeKeyBindings": [{ "before": ["j", "j"], "after": ["<ESC>"] }],
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.findInFiles"]
    },
    { "before": ["<leader>", "S"], "commands": ["search.action.openEditor"] },
    {
      "before": ["<c-n>"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    { "before": ["Y"], "after": ["y", "$"] },
    { "before": ["<leader>", "n"], "commands": [":noh"] },
    { "before": ["<c-h>"], "after": ["<c-w>", "h"] },
    { "before": ["<c-l>"], "after": ["<c-w>", "l"] },
    { "before": ["<c-j>"], "after": ["<c-w>", "j"] },
    { "before": ["<c-k>"], "after": ["<c-w>", "k"] }
  ],
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,
  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  "workbench.commandPalette.history": 100,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.splitOnDragAndDrop": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.panel.opensMaximized": "always",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.renderIndentGuides": "always",
  "workbench.view.alwaysShowHeaderActions": true,
  "zenMode.centerLayout": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.restore": false,
  "window.menuBarVisibility": "hidden",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  // "bracket-pair-colorizer-2.colors": [
  //   // For white themes
  //   "#AA0078",
  //   "#FF6600",
  //   "#0030FF"
  // ],
  "editor.highlightActiveIndentGuide": false,
  "editor.semanticHighlighting.enabled": true,
  "workbench.colorTheme": "Nord",
  "editor.cursorStyle": "line",
  "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "vim.smartRelativeLine": true,
  "gitlens.currentLine.enabled": false,
  "security.workspace.trust.untrustedFiles": "open"
}
