[difftool]
	prompt = false
[mergetool]
	prompt = false


; Neovim as editor
[core]
	editor = nvim
[diff]
  tool = vimdiff
[difftool "vimdiff"]
  cmd = nvim -d -u ~/.config/nvim/init.lua $LOCAL $REMOTE
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool "vimdiff"]
  cmd = nvim -d -u ~/.config/nvim/init.lua $MERGED
    ; cmd = nvim -d -u ~/.config/nvim/init.vim $LOCAL $MERGED $REMOTE


